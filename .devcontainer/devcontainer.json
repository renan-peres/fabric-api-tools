{
    "name": "Fabric Synapse Development Container",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter",
                "ms-azuretools.vscode-docker",
                "gerhardbrueckl.fabricstudio",
                "ms-azuretools.vscode-azuresynapsespark"
            ]
        }
    },
    "forwardPorts": [8888],
    "remoteUser": "vscode",
    "remoteEnv": {
        "SYNAPSE_WORKSPACE_NAME": "${localEnv:SYNAPSE_WORKSPACE_NAME}",
        "SYNAPSE_SQL_POOL_NAME": "${localEnv:SYNAPSE_SQL_POOL_NAME}",
        "SYNAPSE_SPARK_POOL_NAME": "${localEnv:SYNAPSE_SPARK_POOL_NAME}"
    },
    "postCreateCommand": "pip install -r requirements.txt && python /workspace/set_env_vars.py"
}