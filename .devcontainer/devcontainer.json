{
    "name": "Fabric Synapse Development Container",
    "dockerComposeFile": "docker-compose.yaml",
    "service": "dev-synapse",
    "workspaceFolder": "/workspace",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter",
                "ms-azuretools.vscode-docker",
                "gerhardbrueckl.fabricstudio",
                "ms-azuretools.vscode-azuresynapsespark"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python"
            }
        }
    },
    "remoteUser": "vscode",
    "remoteEnv": {
        "SYNAPSE_WORKSPACE_NAME": "${localEnv:SYNAPSE_WORKSPACE_NAME}",
        "SYNAPSE_SQL_POOL_NAME": "${localEnv:SYNAPSE_SQL_POOL_NAME}",
        "SYNAPSE_SPARK_POOL_NAME": "${localEnv:SYNAPSE_SPARK_POOL_NAME}"
    },
    "postCreateCommand": "pip install --upgrade pip && pip install -r <(grep -v fabric-remote-tools requirements.txt) && pip install -r <(grep fabric-remote-tools requirements.txt) && if [ -f /workspace/set_env_vars.py ]; then python /workspace/set_env_vars.py || true; fi"
}